{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./",
        "declarationDir": "./types",
        "paths": {
            "@stingerloom/core": ["../core"],
            "@stingerloom/core/*": ["../core/*"],
            "@stingerloom/core/IoC": ["../core/IoC"],
            "@stingerloom/core/IoC/*": ["../core/IoC/*"]
        },
        "composite": true /* Enable project references */
    },
    "include": ["*.ts", "**/*.ts", "types"],
    "exclude": ["dist", "node_modules", "dist/**/*.ts"],
    "references": [{ "path": "../core" }]
}
