{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "@stingerloom/common": ["../common"],
            "@stingerloom/common/*": ["../common/*"],
            "@stingerloom/bootstrap": ["../bootstrap"],
            "@stingerloom/bootstrap/*": ["../bootstrap/*"],
            "@stingerloom/error": ["../error"],
            "@stingerloom/error/*": ["../error/*"],
            "@stingerloom/ioc": ["../ioc"],
            "@stingerloom/ioc/*": ["../ioc/*"],
            "@stingerloom/utils": ["../utils"],
            "@stingerloom/utils/*": ["../utils/*"],
            "@stingerloom/factory": ["../factory"],
            "@stingerloom/factory/*": ["../factory/*"],
            "@stingerloom/orm": ["../orm"],
            "@stingerloom/orm/*": ["../orm/*"],
            "@stingerloom/router": ["../router"],
            "@stingerloom/router/*": ["../router/*"],
            "@stingerloom/compiler": ["../compiler"],
            "@stingerloom/compiler/*": ["../compiler/*"]
        }
    },
    "exclude": ["dist", "node_modules"]
}
