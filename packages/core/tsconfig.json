{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true,
        "preserveConstEnums": true,
        "paths": {
            "@stingerloom/core": ["../core"],
            "@stingerloom/core/*": ["../core/*"]
        },
        "composite": true /* Enable project references */
    },
    "include": ["*.ts", "**/*.ts"],
    "exclude": ["dist", "node_modules", "types"]
}
