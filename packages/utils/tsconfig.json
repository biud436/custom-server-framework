{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./",
        "declarationDir": "./types",
        "paths": {
            "@stingerloom/common": ["../common"],
            "@stingerloom/common/*": ["../common/*"],
            "@stingerloom/bootstrap": ["../bootstrap"],
            "@stingerloom/bootstrap/*": ["../bootstrap/*"],
            "@stingerloom/error": ["../error"],
            "@stingerloom/error/*": ["../error/*"],
            "@stingerloom/ioc": ["../ioc"],
            "@stingerloom/ioc/*": ["../ioc/*"],
            "@stingerloom/factory": ["../factory"],
            "@stingerloom/factory/*": ["../factory/*"],
            "@stingerloom/services": ["../services"],
            "@stingerloom/services/*": ["../services/*"],
            "@stingerloom/orm": ["../orm"],
            "@stingerloom/orm/*": ["../orm/*"],
            "@stingerloom/router": ["../router"],
            "@stingerloom/router/*": ["../router/*"],
            "@stingerloom/compiler": ["../compiler"],
            "@stingerloom/compiler/*": ["../compiler/*"]
        },
        "composite": true /* Enable project references */
    },
    "include": ["*.ts", "**/*.ts"],
    "exclude": ["dist", "node_modules", "types", "dist/**/*.ts"],
    "references": [
        { "path": "../common" },
        { "path": "../error" },
        { "path": "../ioc" },
        { "path": "../utils" },
        { "path": "../factory" },
        { "path": "../services" },
        { "path": "../orm" },
        { "path": "../router" },
        { "path": "../compiler" }
    ]
}
